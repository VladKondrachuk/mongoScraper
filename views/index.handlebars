<div class="row ">
    <div class="col s2"></div>
    <div class="col s8 left-align card-panel">
        {{#each article}}
        <div class="card-panel" id="idCatch" data-id="{{this._id}}">
            <h4>{{this.title}}</h4>


            <p>{{this.headline}}</p>


            <a href="https://www.sciencedaily.com{{this.link}}">Read Article</a>





        </div>


        <div class="row">
            <div class="col s8"></div>
            <form class="card-panel col s12">
                <h5>Comment on this Article:</h5>
                <div class="row">
                    <div class="input-field">

                        <input id="titleinput" type="text" placeholder="Name" name="name" class="validate active">
                    </div>
                    <div class="input-field">

                        <input id="bodyinput" type="text" placeholder="Comment" name="comment" class="validate active">
                    </div>
                </div>



                <div class="row">
                    <div class="input-field">
                        <center><input id="submitter" class="btn add-comment-button green lighten-1" type="submit"
                                value="Submit"></center>
                    </div>
                </div>
            </form>
        </div>

        <!--COMMENTS SECTION-->
        <div class="row">
            <div class="col s8"></div>
            <div id="commentSection" class="col s12">
                <h5>Comments:</h5>

            </div>
        </div>



        {{/each}}
    </div>
</div>